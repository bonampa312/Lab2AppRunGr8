<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ListElementFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_weight="3"
        android:fillViewport="false"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/sc">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageCareerElement"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3"
                android:src="@drawable/ic_done_all_black_48dp"
                android:layout_gravity="top|left"/>-

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/nameCareerElement"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/distCareerElement"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/placeCareerElement"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/dateCareerElement"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</FrameLayout>
